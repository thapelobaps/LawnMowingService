@model List<LawnMowingBookingService.Models.Machine>


<div class="admin-dashboard container mt-5">
    <h2 class="text-center mb-4">Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-3">
            <!-- Sidebar for Admin Actions -->
            <div class="list-group">
                <a href="#add-machine" class="list-group-item list-group-item-action active" data-bs-toggle="tab">
                    Add New Machine
                </a>
                <a href="#resolve-conflict" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                    Resolve Booking Conflicts
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Add Machine Tab -->
                <div class="tab-pane fade show active" id="add-machine">
                    <div class="card">
                        <div class="card-body">
                            <h3>Add New Machine</h3>
                            <form asp-action="AddMachine" method="post">
                                <div class="form-group mb-3">
                                    <label for="machineName">Machine Name:</label>
                                    <input type="text" id="machineName" name="MachineName" class="form-control" placeholder="Enter machine name" required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="machineType">Machine Type:</label>
                                    <input type="text" id="machineType" name="MachineType" class="form-control" placeholder="Enter machine type" required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="isAvailable">Availability:</label>
                                    <select id="isAvailable" name="IsAvailable" class="form-control" required>
                                        <option value="true">Available</option>
                                        <option value="false">Not Available</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Add Machine</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Resolve Conflict Tab -->
                <div class="tab-pane fade" id="resolve-conflict">
                    <div class="card">
                        <div class="card-body">
                            <h3>Resolve Booking Conflict</h3>
                            <form asp-action="HandleConflict" method="post">
                                <div class="form-group mb-3">
                                    <label for="bookingId">Select Booking:</label>
                                    <select id="bookingId" name="BookingId" class="form-control" required>
                                        @* @foreach (var machine in Model)
                                        {
                                            <option value="@machine.Id">@machine.Name</option>
                                        } *@
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="newBookingDate">New Booking Date:</label>
                                    <input type="date" id="newBookingDate" name="NewBookingDate" class="form-control" required />
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Resolve Conflict</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
