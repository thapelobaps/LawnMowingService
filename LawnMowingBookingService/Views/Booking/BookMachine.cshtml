@model List<LawnMowingBookingService.Models.Machine>

<div class="booking-container">
    <form asp-action="BookMachine" method="post" class="booking-form p-4">
        <h2 class="text-center mb-4">Book a Machine</h2>

        <div class="form-group mb-3">
            <label for="machineId">Select Machine:</label>
            <select id="machineId" name="machineId" class="form-control" required>
                <option value="" disabled selected>Select a machine</option>
                @foreach (var machine in Model)
                {
                    <option value="@machine.Id">@machine.Name</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="bookingDate">Booking Date:</label>
            <input type="date" id="bookingDate" name="bookingDate" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Book Machine</button>
    </form>
</div>

